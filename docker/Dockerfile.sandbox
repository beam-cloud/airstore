# Default sandbox image (Ubuntu 22.04 with Claude Code)
#
# Usage:
#   docker build -f docker/Dockerfile.sandbox -t airstore-sandbox .
#
# Interactive:
#   docker run -it -v $(pwd):/workspace -w /workspace airstore-sandbox
#
# Headless (non-interactive):
#   docker run -e ANTHROPIC_API_KEY=$ANTHROPIC_API_KEY \
#     -v $(pwd):/workspace -w /workspace airstore-sandbox \
#     claude -p "your prompt here" --allowedTools "Read,Edit,Bash"

FROM ubuntu:22.04

# Avoid interactive prompts during package installation
ENV DEBIAN_FRONTEND=noninteractive
ENV TZ=UTC

# Install system dependencies
RUN apt-get update && apt-get install -y \
    # Essential tools
    curl \
    wget \
    git \
    ca-certificates \
    gnupg \
    # Build tools (for native modules)
    build-essential \
    # Shell
    bash \
    zsh \
    # Editors
    vim \
    nano \
    # Utilities
    jq \
    unzip \
    ripgrep \
    fd-find \
    tree \
    htop \
    sudo \
    # Python (often needed for projects)
    python3 \
    python3-pip \
    python3-venv \
    # Networking tools
    openssh-client \
    && rm -rf /var/lib/apt/lists/*

# Install Node.js 22.x (LTS) - needed for some tools/projects
RUN curl -fsSL https://deb.nodesource.com/setup_22.x | bash - \
    && apt-get install -y nodejs \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user (Claude Code requires non-root for --dangerously-skip-permissions)
RUN groupadd -g 1000 sandbox \
    && useradd -m -u 1000 -g sandbox -s /bin/bash sandbox \
    && echo "sandbox ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

# Install global npm packages as root first
RUN npm install -g typescript ts-node

# Switch to sandbox user for Claude Code installation
USER sandbox
WORKDIR /home/sandbox

# Configure npm for user
RUN mkdir -p /home/sandbox/.npm-global \
    && npm config set prefix '/home/sandbox/.npm-global'
ENV PATH=/home/sandbox/.npm-global/bin:/home/sandbox/.local/bin:$PATH
ENV HOME=/home/sandbox

# Install Claude Code (native installer)
RUN curl -fsSL https://claude.ai/install.sh | bash

# Set up shell
ENV SHELL=/bin/bash
WORKDIR /workspace

# Verify installation
RUN claude --version

# Default to bash
CMD ["/bin/bash"]
